<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.view.HomeFragment">

        <Button
            android:id="@+id/btn_call_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:text="@string/call_list_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_buy_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:text="@string/buy_list_title"
            app:layout_constraintEnd_toEndOf="@+id/btn_call_list"
            app:layout_constraintStart_toStartOf="@+id/btn_call_list"
            app:layout_constraintTop_toBottomOf="@+id/btn_call_list" />

        <Button
            android:id="@+id/btn_sell_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:text="@string/sell_list_title"
            app:layout_constraintEnd_toEndOf="@+id/btn_buy_list"
            app:layout_constraintStart_toStartOf="@+id/btn_buy_list"
            app:layout_constraintTop_toBottomOf="@+id/btn_buy_list" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>